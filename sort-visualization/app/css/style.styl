body
    margin: 0px
    padding: 4px 0px
    background: #f5f5f5

.ui
    text-align: center

    & > div
        display: inline-block
        margin-bottom: 5px

    input[type=radio]
        display: none

    .button-set
        font-size: 0px
        margin: 0px 5px

    .button
        display: inline-block
        background: #ddd
        padding: 6px 4px
        border-right: 1px solid #bbb
        font-size: 10px
        font-family: monospace

        &:hover
            background: #ccc

    label:first-child .button
        border-radius: 5px 0px 0px 5px

    label:last-child .button
        border-radius: 0px 5px 5px 0px
        border-right-width: 0px

    label:only-child .button
        border-radius: 5px

    input:checked + .button
        background: #666
        color: white

    input[type=range]
        position: relative
        top: 7px

.graph
    text-align: center

#intro
    font-family: monospace
    text-align: center


